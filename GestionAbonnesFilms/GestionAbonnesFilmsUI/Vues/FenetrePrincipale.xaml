        <Button x:Name="btnModifier" Content="Modifier" HorizontalAlignment="Left" Margin="362,407,0,0" VerticalAlignment="Top" Height="40" Width="120" RenderTransformOrigin="0.522,-0.13" Background="#FF2968E9"/>
        <Button x:Name="btnSupprimer" Content="Supprimer" HorizontalAlignment="Left" Margin="683,407,0,0" VerticalAlignment="Top" Height="40" Width="120" RenderTransformOrigin="0.522,-0.13" Background="#FFDB3B0E"/-->
        <Label Content="Fenêtre Principale" HorizontalAlignment="Left" Margin="339,14,0,0" VerticalAlignment="Top" Width="345" FontSize="24" FontWeight="Bold"/>
        <TabControl HorizontalAlignment="Center" Height="369" Margin="0,67,0,0" VerticalAlignment="Top" Width="852">
            <TabItem Header="Client">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="47*"/>
                        <ColumnDefinition Width="14*"/>
                        <ColumnDefinition Width="781*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Liste  des Clients" HorizontalAlignment="Left" Margin="154,16,0,0" VerticalAlignment="Top" Grid.Column="3"/>
                    <DataGrid x:Name="DatagridListeClient"  Width="700" Margin="13,52,82,75" Grid.ColumnSpan="2" Grid.Column="2"/>
                    <Button x:Name="btnCreer"   Content="Créer" HorizontalAlignment="Left" Margin="10,280,0,0" VerticalAlignment="Top" Height="40" Width="120" RenderTransformOrigin="0.522,-0.13" Background="#FF43C327" Grid.Column="3" Click="btnCreer_Click"/>
                    <Button x:Name="btnModifier" Content="Modifier" HorizontalAlignment="Left" Margin="300,280,0,0" VerticalAlignment="Top" Height="40" Width="120" RenderTransformOrigin="0.522,-0.13" Background="#FF2968E9" Grid.Column="3" Click="btnModif_Click"/>
                    <Button x:Name="btnSupprimer" Content="Supprimer" HorizontalAlignment="Left" Margin="580,280,0,0" VerticalAlignment="Top" Height="40" Width="120" RenderTransformOrigin="0.522,-0.13" Background="#FFDB3B0E" Grid.Column="3" Click="btnSupprim_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Film">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="51*"/>
                        <ColumnDefinition Width="14*"/>
                        <ColumnDefinition Width="781*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Liste  des films" HorizontalAlignment="Left" Margin="154,16,0,0" VerticalAlignment="Top" Grid.Column="2"/>
                    <DataGrid Width="700" Margin="13,52,82,75" Grid.ColumnSpan="2" Grid.Column="1"/>
                    <Button x:Name="btnAjoutFilm"   Content="Ajouter" HorizontalAlignment="Left" Margin="10,280,0,0" VerticalAlignment="Top" Height="40" Width="120" RenderTransformOrigin="0.522,-0.13" Background="#FF43C327" Grid.Column="3"/>
                    <Button x:Name="btnModifierFilm" Content="Modifier" HorizontalAlignment="Left" Margin="300,280,0,0" VerticalAlignment="Top" Height="40" Width="120" RenderTransformOrigin="0.522,-0.13" Background="#FF2968E9" Grid.Column="3"/>
                    <Button x:Name="btnSupprimerFilm" Content="Supprimer" HorizontalAlignment="Left" Margin="580,280,0,0" VerticalAlignment="Top" Height="40" Width="120" RenderTransformOrigin="0.522,-0.13" Background="#FFDB3B0E" Grid.Column="3"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
